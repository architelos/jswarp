{
    "compilerOptions": {
        "target": "esnext",
        "module": "es6",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "declarationDir": "./dist",
        "declaration": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
    },
    "include": [
        "src/**/*.ts",
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
